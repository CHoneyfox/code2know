<h1>Edit User <%= @user.username %></h1>

<% if @user.errors.any? %>

<div id="modelerrors">
  <% @user.errors.full_messages.each do |msg| %>
  
  <div id="errormsg"><%= msg %></div>
  <% end %>
</div>

<% end %>


<%= form_with model: @user, url: user_path(id: @user.id), method: :patch do |form| %>

<div>
  <%= form.label :username %>
  <%= form.text_field :username %>
</div>

<div>
  <%= form.label :email %>
  <%= form.text_field :email %>
</div>

<div>
  <%= form.label :password %>
  <%= form.password_field :password %>
</div>

<div>
  <%= form.label :pfp %>
  <%= form.file_field :pfp, accept: "image/*" %>
</div>

<div>
  <%= form.label :password_confirmation %>
  <%= form.password_field :password_confirmation %>
</div>

<hr>

<div>
  <%= form.label :xp %>
  <%= form.number_field :xp %>
</div>

<% if Current.user.role.permission >= 4 %>

<div>
  <%= form.label :verified %>
  <%= form.check_box :verified %>
</div>

<% end %>

<div>
  <%= form.submit "Update" %>
</div>

<% end %>


<%= button_to "Delete User", user_path(id: @user.id), method: :delete %>
