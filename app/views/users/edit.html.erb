<h1>Edit User <%= @user.username %></h1>

<%= form_with model: @user, url: user_path(id: @user.id), method: :patch do |form| %>

<div>
  <%= form.label :username %>
  <%= form.text_field :username %>
</div>

<div>
  <%= form.label :email %>
  <%= form.text_field :email %>
</div>

<div>
  <%= form.label :password %>
  <%= form.text_field :password %>
</div>

<div>
  <%= form.label :password_confirmation %>
  <%= form.text_field :password_confirmation %>
</div>

<hr>

<div>
  <%= form.label :xp %>
  <%= form.number_field :xp %>
</div>

<div>
  <%= form.submit "Update" %>
</div>

<% end %>

