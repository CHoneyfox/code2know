<h1>Create new Category</h1>

<%= form_with model: @category, url: categories_path do |form| %>

<div>
  <%= form.label :name %>
  <%= form.text_field :name, required: true %>
</div>

<div>
  <%= form.label :permission %>
  <%= form.number_field :permission, required: true, min: 0, max: 5 %>
</div>

<div>
  <%= form.submit "Create new Role" %>
</div>

<% end %>
